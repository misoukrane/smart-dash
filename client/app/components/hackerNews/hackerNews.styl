.hn
  border-radius: 4px
  border: 1px solid black
  min-height: 468px
.hn-reload
  text-decoration none
.hn-spinner
  left: 43%
.hn-spinner.ng-hide-add
  animation: fadeOut 0.2s
.hn-spinner.ng-hide-remove
  animation: fadeIn 0.2s
.hn-list
  list-style: none
  margin-top: 0
.hn-list-item
  margin: 4% 0;
.hn-list-item-score
  color white
  background-color #ff6600
  padding 1% 1%;
  border-radius 50%
.hn-list-item-link
  font-size 90%
  text-decoration none
.hn-list-item-link:visited
  text-decoration none
  color rgb(0, 0, 238)
